<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyBookList">

    <ProgressBar
        android:id="@+id/progressBarBooks"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="40dp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_books_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:paddingBottom="12dp"
        android:clipToPadding="false"/>

    <TextView
        android:id="@+id/my_books_emptyListMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_gravity="center"
        android:text="@string/no_books"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/imageViewEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/camera_border"
        android:padding="20dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_add_button_24dp" />

</FrameLayout>